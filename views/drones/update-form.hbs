<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="POST">
    <label>
        Name: 
        <input type="text" name="name" value="{{name}}">  
    </label>
    <br>
   

    <label>
        Propellers: 
        <input type="number" name="propellers" min="1" max="8" value="{{propellers}}">
    </label>
    <br>


    <label>
        Max Speed: 
        <input type="number" name="maxSpeed" min="1" max="30" value="{{maxSpeed}}">
    </label>
    <br>

    <button type="submit">Save</button>
</form>
<a href="/drones">Back</a>